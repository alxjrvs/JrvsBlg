%div.row-fluid.project_list
  %div.span12
    %h3
      Project List
  %div.row-fluid.posts
    - @projects.each do |project|
      %div.span4
        %h4= link_to project.title, project
        %p= project.blurb
        -#%p= format post.content
        - if user_signed_in?
          %p.admin_text= link_to 'Edit', edit_project_path(project)
          %p.admin_text= "|"
          %p.admin_text= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete
  %div.row-fluid
    %div.span10
      %p.read_more= link_to "See More Projects", projects_path

