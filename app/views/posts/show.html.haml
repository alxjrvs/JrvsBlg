%div.span3.sb-fixed#sidebar.sidebar-nav-fixed
  =render "postsidebar"
%div.span9.span-fixed-sidebar#main-content
  %p#notice= notice

  %h1#post-title= @post.title
  %p#post-content= format @post.content

  %div.row-fluid
    %div.span12
      %div#postend
        =render "postend"
-if @next
  %a{:href => post_path(@next)}
    %div#next_box.alt
      %p Next
      %i.icon-chevron-down
