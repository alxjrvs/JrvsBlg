%div.post_box.row-fluid
  -if @next
    %a.post_nav.span6{:href => post_path(@next)}
      %div#next_box
        %p=" \"#{@next.title} \" "
        -#%i.icon-chevron-right
  -if @prev
    %a.post_nav.span6{:href => post_path(@prev)}
      %div#previous_box
        -#%i.icon-chevron-left
        %p=" \"#{@prev.title} \" "
%div.row-fluid
  %a.span12.read_more{:href => posts_path}
    %p Read More

