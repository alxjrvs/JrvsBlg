%div.post_box
  -if @next
    %a.post_nav{:href => post_path(@next)}
      %div#next_box
        %i.icon-chevron-right
        %p.title="#{@next.title}"
  -if @prev
    %a.post_nav{:href => post_path(@prev)}
      %div#previous_box
        %i.icon-chevron-left
        %p.title="#{@prev.title}"
%a.read_more{:href => posts_path}
  %p Read More

