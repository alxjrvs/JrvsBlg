%div.row-fluid
  -if @next
    %div.span12
      %p= link_to "Next", post_path(@next)
  %div.span12
    %div.header_area
      %div.header_image
        =image_tag "another_story.png"
      %div.header_blurb
        %h1.header_text
          Blog.
          %br
          %small
            My thoughts on Fiction and the Future

        %div.nav_area
          %div.header_list
            %p=link_to  "Posts", posts_path
          %div.header_list
            %p=link_to  "Projects", projects_path
          %div.header_list
            = render "shared/admin_bar"
  -if user_signed_in?
    = link_to 'Edit', edit_post_path(@post)
    \|
    = link_to 'Back', posts_path

  -if @prev
    %div.span12
      %p= link_to "Previous", post_path(@prev)
